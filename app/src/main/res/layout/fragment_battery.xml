<!-- TODO(g-ortuno): Remove FragmentLayout since it's not necessary -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="io.github.webbluetoothcg.bletestperipheral.BatteryServiceFragment">
    <RelativeLayout android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView_serviceName"
                android:text="Image Bluetooth"
                android:textAppearance="@style/subheader"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="48dp"/>

        <EditText
            android:id="@+id/delay"
            android:layout_margin="15dp"
            android:textColor="@color/primary_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Time Delay (ms)"
            android:text="1"
            android:inputType="number"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textView_serviceName"/>

        <Button
            android:id="@+id/getstring"
            android:layout_margin="15dp"
            android:textColor="@color/accent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Image"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/delay"/>

    </RelativeLayout>
</FrameLayout>
